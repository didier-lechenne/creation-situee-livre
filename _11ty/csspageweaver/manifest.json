{
    "plugins": [  "baseline", "tableOfContent", "ragadjust", "inlineNotes", "sidenotes",  "pageMove" ,  "fullPage", "fullContent",  "floatPage",  "spread", "previewPage", "imposition", "layout",  "marker",   "bgColor", "urlBreak",  "invisibleSpaces",    "editor",  "marginBox",   "hideFolios", "reloadInPlace", "texLinebreak"],

    "pluginsParameters":{

        "reloadInPlace": {
            "blur": false,
            "behavior": "instant"
        },

        "tableOfContent": {
            "tocContainer": "#nav-toc",
            "tocTitles": [ "h1", "h2"]
         },

        "ragadjust": {
            "selectors": "h1,h2,h3,h4,h5,h6,blockquote,li,ol, .intervenants p, p",
            "exeptions": ["short_prepositions"]
         },

        "hideFolios": {
            "help": "[ 80, 81, 120 ]",
            "pages": [25, 45, 55, 95, 86, 105, 103,  111, 113, 115, 117, 119, 121 ]
        },
 
        "inlineNotes": {
            "input": "sup.footnote-ref",
            "containerNotes": "section.footnotes",
            "newClass": "sidenote"
        },

        "sidenotes": {
            "selector": ".sidenote",
            "position": "inside",
            "align": "section p:first-of-type",
            "reset": ".chapter"
        }

    },
    
    "css": [
        "./assets/css/print.css"
    ],
    
    "hook": [
    ]
}

