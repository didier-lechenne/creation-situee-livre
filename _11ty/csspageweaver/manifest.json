{
    "plugins": [  "baseline", "inlineNotes", "sidenotes",  "footnotesFix",   "fullPage", "fullContent",  "floatPage",  "spread", "previewPage", "imposition", "layout",  "marker",   "bgColor", "urlBreak", "ragadjust", "invisibleSpaces",   "tableOfContent",   "marginBox",   "hideFolios", "reloadInPlace"],

    "pluginsParameters":{

        "reloadInPlace": {
            "blur": false,
            "behavior": "instant"
        },

        "tableOfContent": {
            "tocContainer": "#nav-toc",
            "tocTitles": [ "h2"]
         },

        "ragadjust": {
            "selectors": "h1,h2,h3,h4,h5,h6, li, ol, blockquote, section.colloque p, section.colloque div",
            "exeptions": ["short_prepositions"]
         },

        "hideFolios": {
            "help": "Unnumbered pages (e.g., 80, 81)",
            "pages": []
        },
 
        "inlineNotes": {
            "input": "sup.footnote-ref",
            "containerNotes": "section.footnotes",
            "newClass": "sidenote"
        },

        "sidenotes": {
            "selector": ".sidenote",
            "position": "inside",
            "align": "section p:first-of-type",
            "reset": ".chapter"
        }

    },
    
    "css": [
        "./assets/css/print.css"
    ],
    
    "hook": [
    ]
}

