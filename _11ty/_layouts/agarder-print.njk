<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{% if title %}{{ title }} | {% endif %}{{ config.title }}</title>
    <meta name="description" content="{{ subtitle or config.subtitle }}" />

    <link rel="icon" type="image/svg+xml" href="./assets/favicon.svg" />

    <meta property="og:title" content="{{ title or config.title }}" />
    <meta
      property="og:description"
      content="{{ subtitle or config.subtitle }}"
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="{{ config.url }}{{ page.url }}" />



<script src="./csspageweaver/lib/csstree.min.js"></script>
<script src="./csspageweaver/main.js" type="module"></script>

  </head>

  <body class="print {{ bodyClass }}" lang="fr">
    <main class="main-content">
    
        {% for p in collections.printPages %} 
          <section id="{{ p.fileSlug | cleanTitle | slug }}" 
                  style="{% if p.data.bgColor %}--bg-color: {{ p.data.bgColor }}; {% endif %} {% if p.data.gridCol %}--grid-col: {{ p.data.gridCol }};{% endif %}{% if p.data.gridRow %}--grid-row: {{ p.data.gridRow }};{% endif %}{% if p.data.gridColGutter %}--grid-col-gutter: {{ p.data.gridColGutter }};{% endif %}{% if p.data.gridRowGutter %}--grid-row-gutter: {{ p.data.gridRowGutter }};{% endif %}"
                  {% if p.data.moveTo %}data-page-move-to="{{ p.data.moveTo }}" {% endif %}
                  data-template="{{ p.data.template  }}"
                  {% if p.data.bgColor %}data-bg-color="{{ p.data.bgColor }}" {% endif %}
                  
                  {% if p.data.show %}data-show="{{ p.data.show }}"{% endif %}
                  {% if p.data.toc %}data-toc="{{ p.data.toc }}"{% endif %}
                  class="{% if p.data.toc %}toc-{{ p.data.toc }}{% endif %} {% if p.data.class %}{{ p.data.class }}{% endif %} {{ p.data.template }}"
            {% include "partials/frontmatter-attrs.njk" %}>
            
            {{ p.templateContent | safe }} 

          </section>
        {% endfor %}
    
    </main>
  </body>
  
</html>